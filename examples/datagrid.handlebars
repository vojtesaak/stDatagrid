<datagrid config="{config}" heading="Datagrid Component">
    <config>

        <!--action data-title="Synchronize with Fakturoid" data-callback="refresh" data-name="refresh-button"></action>
        <action data-title="Generate missing invoices" data-callback="generateMissing" data-name="generateMissing-button"></action-->

        <no-rows>
            <message>There is no Person yet.</message>
        </no-rows>

        <no-filtered-rows>
            <message>No Person fits for the filters.</message>
            <button-text>Show all Persons</button-text>
        </no-filtered-rows>

        <filters>
            <filter data-type="Text"
                    data-placeholder="Search..."
                    data-name="search">
            </filter>
            <filter data-type="Select"
                    data-placeholder="All Langs"
                    data-name="favoriteLang">

                    <static-option value="null">all</static-option>
                    <static-option value="javascript">javascript</static-option>
                    <static-option value="php">php</static-option>
                    <static-option value="golang">goLang</static-option>
            </filter>
        </filters>

        <form-config>

            <title data-form="insert">New person</title>
            <title data-form="update">Edit person</title>


            <field data-type="Text" data-name="name" data-title="Name" autofocus>
                <rule data-type="Required">This field is mandatory.</rule>
            </field>

            <field data-type="Text" data-name="email" data-title="Email">
                <rule data-type="Required">This field is mandatory.</rule>
                <rule data-type="Email">The email is not valid.</rule>
            </field>

            <field data-type="Text" data-name="position" data-title="Position">
                <rule data-type="Required">This field is mandatory.</rule>
            </field>

            <field data-type="Text" data-name="motto" data-title="Motto">
                <rule data-type="Required">This field is mandatory.</rule>
            </field>

            <field data-type="Select" data-name="favoriteLang" data-title="Favorite language" data-default="null">
                <rule data-type="Required">This field is mandatory.</rule>
                <static-option value="null">Choose your favorite language</static-option>
                <static-option value="javascript">javascript</static-option>
                <static-option value="php">php</static-option>
                <static-option value="golang">goLang</static-option>
            </field>


            <action data-title="Save" data-name="save"></action>
            <action data-title="Delete" data-name="delete" data-form="update"></action>
            <action data-title="Cancel" data-name="cancel"></action>
        </form-config>

        <columns>
            <column data-type="Text" data-name="name" data-title="Name" data-always-visible="true"></column>
            <column data-type="Text" data-name="email" data-title="Email" data-link="mailto:[email]"></column>
            <column data-type="Text" data-name="position" data-title="Position" data-always-visible="true"></column>
            <column data-type="Text" data-name="motto" data-title="Motto"></column>
            <column data-type="Text" data-name="favoriteLang" data-title="Favorite language"></column>
            <column data-type="Text" data-name="web" data-title="Web" data-link="[web]" target="_blank"></column>
        </columns>

    </config>
</datagrid>
